<!--logs.wxml-->
<view class="container log-list">
<button catchtap="chooseImageTap">选择封面图片</button>
<!-- forms 表单提交数据  -->
  <form bindsubmit="publishCourse" bindreset="formReset">
   <image name="img_url"  class="xd-img-user1"  src="{{logo}}"></image>
   
  <label>课程名称:</label><input name="name" placeholder="课程名称" />
  <label>课程地点:</label><input name="address" placeholder="地点" />
  <label>课程费用</label><input name="cost" placeholder="课程费用" />
  <label>课程周期</label><input name="time" placeholder="课程周期如大概24节课" />
  <label>课程描述</label><input name="description" placeholder="课程描述" />
  <button formType="submit">提交</button>
</form>
</view>
